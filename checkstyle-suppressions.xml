<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppression_1_2.dtd">
<suppressions>
    <!-- 抑制测试代码的某些规则 -->
    <suppress checks="Javadoc" files=".*Test\.java$"/>
    <suppress checks="MethodLength" files=".*Test\.java$"/>
    <suppress checks="ParameterNumber" files=".*Test\.java$"/>
    <suppress checks="Complexity" files=".*Test\.java$"/>
    
    <!-- 抑制第三方库代码的检查 -->
    <suppress checks=".*" files=".*/generated/.*"/>
    <suppress checks=".*" files=".*/target/.*"/>
    <suppress checks=".*" files=".*/build/.*"/>
    
    <!-- 抑制Spring Boot配置类的检查 -->
    <suppress checks=".*" files=".*Configuration\.java$"/>
    <suppress checks=".*" files=".*AutoConfiguration\.java$"/>
    
    <!-- 抑制某些特定的警告 -->
    <suppress checks=".*" files=".*/test/.*"/>
    <suppress checks=".*" files=".*/it/.*"/>
    
    <!-- 抑制特定规则的检查 -->
    <suppress checks="MagicNumber" files=".*Test\.java$"/>
    <suppress checks="FinalLocalVariable" files=".*Test\.java$"/>
    <suppress checks="AvoidNestedBlocks" files=".*Test\.java$"/>
    <suppress checks="VisibilityModifier" files=".*Test\.java$"/>
    <suppress checks="LineLength" files=".*Test\.java$"/>
    <suppress checks="FileLength" files=".*Test\.java$"/>
    
    <!-- 抑制导入相关规则 -->
    <suppress checks=".*" files=".*Test\.java$"/>
    
    <!-- 抑制注释规则 -->
    <suppress checks="Javadoc" files=".*Test\.java$"/>
    
    <!-- 抑制特定代码格式规则 -->
    <suppress checks="WhitespaceAround" files=".*Test\.java$"/>
    <suppress checks="Indentation" files=".*Test\.java$"/>
    
    <!-- 抑制抽象类命名规则 -->
    <suppress checks="AbstractClassName" files=".*Abstract.*\.java$"/>
    
    <!-- 抑制接口命名规则 -->
    <suppress checks="InterfaceIsType" files=".*PluginInterface\.java$"/>
    
    <!-- 抑制特定异常类 -->
    <suppress checks=".*" files=".*Exception.*\.java$"/>
    <suppress checks=".*" files=".*Error.*\.java$"/>
</suppressions>